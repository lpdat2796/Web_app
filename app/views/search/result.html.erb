<%= render 'form' %>

  <table class="table table-bordered">
    <thead>
        <th>ID</th>
        <th>Author</th>
        <th>Title</th>
        <th>Publisher</th>
        <th>Year</th>
        <th>Pages</th>
        <th>Language</th>
        <th>Size</th>
        <th>Extension</th>
        <th>Download</th>
    </thead>
    <tbody>
        <% @arr.each do |book| %>
          <%= form_for book, url: get_path  do |f| %> 
          <tr>
              <td>
                <%= f.hidden_field :book_id, :value => book.book_id %>
                <%= book.book_id %>
              </td>
              <td>
                <%= f.hidden_field :author, :value => book.author %>
                <%= book.author %>
              </td>
              <td>
                <%= f.hidden_field :title, :value => book.title %> 
                <%= book.title %>
              </td>
              <td>
                <%= f.hidden_field :publisher, :value => book.publisher %>
                <%= book.publisher %>
              </td>
              <td>
                <%= f.hidden_field :year, :value => book.year %>
                <%= book.year %>
              </td>
              <td>
                <%= f.hidden_field :page, :value => book.page %>
                <%= book.page %>
              </td>
              <td>
                <%= f.hidden_field :language, :value => book.language %>
                <%= book.language %>
              </td>
              <td>
                <%= f.hidden_field :size, :value => book.size %>
                <%= book.size %>
              </td>
              <td>
                <%= f.hidden_field :extension, :value => book.extension %>
                <%= book.extension %>
              </td> 
              <td>
                <%= f.hidden_field :link, :value => book.link %>
                <%= f.submit :Download, {  class: "float-right btn btn-primary" } %>
              </td>
          </tr>
          <%end%>
        <% end %>
    </tbody>
  </table>
  
