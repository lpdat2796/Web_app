<div class="container">
  <div class="row">
    <h2>Sign up</h2>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for(resource, as: resource_name, url: register_url) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Please enter your email" %>
        </div>
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder:"Please enter your name"%>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Please enter your password"%>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Please enter your password"%>
        </div>

        <div class="text-center">
          <%= f.submit "Sign up", class: "btn btn-info col-lg-12" %>
        </div>
        <div class="text-left">
            <%= render "devise/shared/links" %>
          </div>
      <% end %>
    </div>
  </div>
</div>