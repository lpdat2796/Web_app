<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul>
        <% if value.class == Array %>
          <% value.each do |v| %>
            <li>
              <%= v %>
            </li>
          <% end %>
        <% else %>
          <li>
            <%= value %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>